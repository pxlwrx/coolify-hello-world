# ==============================================
# Coolify Hello World - Environment Variables
# ==============================================

# Application Environment
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Application Settings
APP_NAME=coolify-hello-world
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# Timezone Configuration
TZ=UTC

# Locale Settings
LANG=en_US.UTF-8
LOCALE=en_US

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1

# Container Information (Auto-populated by Docker)
IMAGE_NAME=coolify-hello-world:latest
CONTAINER_NAME=coolify-hello-world-app

# System Information Display Settings
REFRESH_INTERVAL=5000
SHOW_ASCII_ART=true
TERMINAL_THEME=green

# Security Settings
DISABLE_X_POWERED_BY=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Performance Settings
MAX_MEMORY_RESTART=1000MB
INSTANCES=1

# Health Check Configuration
HEALTH_CHECK_PATH=/api/system
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Coolify Deployment Settings
COOLIFY_MANAGED=true
COOLIFY_BRANCH=main
COOLIFY_BUILD_PACK=nixpacks

# Network Configuration
INTERNAL_PORT=3000
EXTERNAL_PORT=80

# Database (if needed in future)
# DATABASE_URL=postgresql://username:password@localhost:5432/database
# REDIS_URL=redis://localhost:6379

# External APIs (if needed)
# API_KEY=your_api_key_here
# API_SECRET=your_api_secret_here

# Monitoring and Analytics
# ANALYTICS_ID=your_analytics_id
# SENTRY_DSN=your_sentry_dsn

# Custom Headers
# CUSTOM_HEADER_NAME=value

# Development Only (remove in production)
# DEBUG=true
# VERBOSE_LOGGING=true
